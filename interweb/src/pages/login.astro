---
import axios from 'axios';
import { config } from '../set/config'; // Adjust path as needed

const apiUrl = config.apiUrl;

let username = '';
let password = '';
let error = null;
let loading = false;

const handleSubmit = async () => {
  loading = true;
  try {
    const response = await axios.post(`${apiUrl}/users/login`, { username, password });
    const { username: responseUsername, nombre, apellido } = response.data;
    localStorage.setItem('user', JSON.stringify({ nombre, apellido }));
    window.location.href = '/home';
    error = null;
  } catch (err) {
    if (axios.isAxiosError(err)) {
      const serverErrorMessage = err.response?.data?.message;
      error = serverErrorMessage || 'Nombre de usuario o contraseña incorrecta.';
    } else {
      error = 'Ocurrió un error inesperado. Por favor, inténtalo de nuevo.';
    }
  } finally {
    loading = false;
  }
};
---

<div class="container">
  <div class="scroll-container">
    <img src="/interlogo.png" alt="Logo" class="logo" />
    <div class="form">
      <h1 class="title">Iniciar Sesión</h1>
      <label class="label">Usuario:</label>
      <input
        type="text"
        class="input"
        value={username}
        onInput={(e) => (username = e.target.value)}
        placeholder="Ingresa tu usuario"
      />
      <label class="label">Contraseña:</label>
      <input
        type="password"
        class="input"
        value={password}
        onInput={(e) => (password = e.target.value)}
        placeholder="Ingresa tu contraseña"
      />
      {error && <p class="error">{error}</p>}
      {loading ? (
        <div class="loading">Cargando...</div>
      ) : (
        <button class="button" onClick={handleSubmit}>Ingresar</button>
      )}
    </div>
  </div>
</div>

